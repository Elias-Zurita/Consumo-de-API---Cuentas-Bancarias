<!DOCTYPE html>
<html>

  <%- include('partials/head.ejs') %>  <!--  Incluye el HEAD  -->  
  
  <body>

    <%- include('partials/header.ejs') %>  <!--  Incluye el HEADER  -->
    
    <div class="consultaSaldo">Consulta de Saldo</div>

    <div class="seleccionaCuenta">Selecciona la Cuenta a Consultar</div>

    
    <div class="bodyCuentas">

      <% if (prev != 0) { %>
        <div class="cajaDeCuenta"><a href="/cuentas/list?page=<%=prev%>">Pagina anterior</a></div>
      <% } %>

        <% cuentas.forEach(cuenta => { %> 
          <a href="/cuentas/detalle/<%=cuenta.n%>">
            <div class="cajaDeCuenta">
              <div>
                <% if (cuenta.tipo_letras == "CA") { %>
                  <div>Caja de Ahorro</div>
                <% } else if (cuenta.tipo_letras == "CC" || "Cc") { %>
                  <div>Cuenta Corriente</div>
                <% } %>
              </div>
              <div>Nro: <%= cuenta.n %></div>
            </div>
          </a>
        <% }) %>

      <% if (next != 0) { %>
        <div class="cajaDeCuenta"><a href="/cuentas/list?page=<%=next%>">Siguiente pagina</a></div>
      <% } %>

      </div>
    
    <%- include('partials/footer.ejs') %>  

  </body>

</html>